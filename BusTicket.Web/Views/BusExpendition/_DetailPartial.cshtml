@model BusExpeditionViewModel

@{
    ViewData["Title"] = "Sefer Detay";
}

<div class="modal fade" id="@("Detail-" + Model.IdBusExpedition)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="travelDetail">Seyehat Detayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mb-3 text-center">
                    <div class="col-6 themed-grid-col">Güzergah</div>
                    <div class="col-6 themed-grid-col">@Model.Route</div>
                </div>
                <div class="row mb-3 text-center">      
                    <div class="col-6 themed-grid-col">Sefer Tipi</div>
                    <div class="col-6 themed-grid-col">@Model.BusExpeditionTypeDescription</div>
                </div>
                <div class="row mb-3 text-center">
                    <div class="col-6 themed-grid-col">Yaklaşık Seyehat Süresi</div>
                    <div class="col-6 themed-grid-col"> @Model.ExpectedTravelTime</div>
                </div>
                
            </div>
        </div>
    </div>
</div>

